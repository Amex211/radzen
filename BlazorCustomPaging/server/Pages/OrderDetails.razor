@page "/order-details"
@layout MainLayout
@inherits BlazorCustomPaging.Pages.OrderDetailsComponent

@using Radzen
@using Radzen.Blazor
@using BlazorCustomPaging.Models.Sample
<RadzenContent Container="main">
  <ChildContent>
    <RadzenHeading Size="H1" Text="Order Details">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@Button0Click">
        </RadzenButton>
        <RadzenGrid @ref="grid0" AllowFiltering="true" AllowPaging="true" AllowSorting="true" Data="@getOrderDetailsResult" TItem="BlazorCustomPaging.Models.Sample.OrderDetail" RowSelect="@Grid0RowSelect">
          <Columns>
            <RadzenGridColumn TItem="BlazorCustomPaging.Models.Sample.OrderDetail" Property="Id" Title="Id">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="BlazorCustomPaging.Models.Sample.OrderDetail" Property="Quantity" Title="Quantity">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="BlazorCustomPaging.Models.Sample.OrderDetail" Property="OrderId" SortProperty="Order.UserName" FilterProperty="Order.UserName" Title="Order">
              <Template Context="data">
              @(data.Order?.UserName)
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="BlazorCustomPaging.Models.Sample.OrderDetail" Property="ProductId" SortProperty="Product.ProductName" FilterProperty="Product.ProductName" Title="Product">
              <Template Context="data">
              @(data.Product?.ProductName)
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="BlazorCustomPaging.Models.Sample.OrderDetail" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
              <Template Context="blazorCustomPagingModelsSampleOrderDetail">
                <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="close" Size="ButtonSize.Small" Click="@((args) =>GridDeleteButtonClick(args, blazorCustomPagingModelsSampleOrderDetail))" @onclick:stopPropagation="true">
                </RadzenButton>
              </Template>
            </RadzenGridColumn>
          </Columns>
        </RadzenGrid>
      </div>
    </div>
  </ChildContent>
</RadzenContent>

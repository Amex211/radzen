@page "/products"
@layout MainLayout
@inherits BlazorCustomPaging.Pages.ProductsComponent

@using Radzen
@using Radzen.Blazor
@using BlazorCustomPaging.Models.Sample
<RadzenContent Container="main">
  <ChildContent>
    <RadzenHeading Size="H1" Text="Products">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@Button0Click">
        </RadzenButton>
        <RadzenGrid @ref="grid0" AllowFiltering="true" AllowPaging="true" AllowSorting="true" Data="@getProductsResult" TItem="BlazorCustomPaging.Models.Sample.Product" RowSelect="@Grid0RowSelect">
          <Columns>
            <RadzenGridColumn TItem="BlazorCustomPaging.Models.Sample.Product" Property="Id" Title="Id">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="BlazorCustomPaging.Models.Sample.Product" Property="ProductName" Title="Product Name">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="BlazorCustomPaging.Models.Sample.Product" Property="ProductPrice" FormatString="{0:C}" Title="Product Price">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="BlazorCustomPaging.Models.Sample.Product" Property="ProductPicture" Title="Product Picture" Sortable="false" Filterable="false">
              <Template Context="data">
              <img src="@data.ProductPicture" width="50%" height="50%" />
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="BlazorCustomPaging.Models.Sample.Product" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
              <Template Context="blazorCustomPagingModelsSampleProduct">
                <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="close" Size="ButtonSize.Small" Click="@((args) =>GridDeleteButtonClick(args, blazorCustomPagingModelsSampleProduct))" @onclick:stopPropagation="true">
                </RadzenButton>
              </Template>
            </RadzenGridColumn>
          </Columns>
        </RadzenGrid>
      </div>
    </div>
  </ChildContent>
</RadzenContent>

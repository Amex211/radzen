{
  "components": [
    {
      "type": "content",
      "container": "main",
      "components": [
        {
          "type": "heading",
          "name": "pageTitle",
          "size": "H1",
          "text": "Customers"
        },
        {
          "type": "row",
          "components": [
            {
              "type": "col",
              "class": "col-md-12",
              "components": [
                {
                  "name": "grid0",
                  "allowDelete": true,
                  "allowAdd": true,
                  "allowFiltering": true,
                  "allowMultiSorting": false,
                  "allowPaging": true,
                  "allowSorting": true,
                  "count": "${getCustomersCount}",
                  "data": "${getCustomersResult}",
                  "events": {
                    "loadData": [
                      {
                        "name": "Northwind.getCustomers",
                        "parameters": [
                          {
                            "name": "$top",
                            "value": "event.top"
                          },
                          {
                            "name": "$skip",
                            "value": "event.skip"
                          },
                          {
                            "name": "$expand",
                            "value": ""
                          },
                          {
                            "name": "$count",
                            "value": "event.top != null && event.skip != null"
                          },
                          {
                            "name": "$filter",
                            "value": "${event.filter}"
                          },
                          {
                            "name": "$orderby",
                            "value": "${event.orderby}"
                          }
                        ],
                        "then": [
                          {
                            "name": "getCustomersResult",
                            "type": "set",
                            "value": "${result.value}"
                          },
                          {
                            "name": "getCustomersCount",
                            "type": "set",
                            "value": "event.top != null && event.skip != null ? result['@odata.count'] : ${result.value.length}"
                          }
                        ],
                        "type": "invoke"
                      }
                    ],
                    "delete": [
                      {
                        "error": [
                          {
                            "detail": "Unable to delete Customer",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "Northwind.deleteCustomer",
                        "parameters": [
                          {
                            "name": "CustomerID",
                            "value": "${event.CustomerID}"
                          }
                        ],
                        "then": [
                          {
                            "detail": "Customer deleted!",
                            "severity": "success",
                            "summary": "Success",
                            "type": "notify"
                          }
                        ],
                        "type": "invoke"
                      }
                    ],
                    "add": [
                      {
                        "path": "add-customer",
                        "type": "popup"
                      }
                    ],
                    "rowSelect": [
                      {
                        "parameters": [
                          {
                            "name": "CustomerID",
                            "value": "${event.CustomerID}"
                          }
                        ],
                        "path": "edit-customer",
                        "type": "popup"
                      }
                    ]
                  },
                  "title": "",
                  "columns": [
                    {
                      "property": "CustomerID",
                      "title": "Customer ID",
                      "type": "string"
                    },
                    {
                      "property": "CompanyName",
                      "title": "Company Name",
                      "type": "string"
                    },
                    {
                      "property": "ContactName",
                      "title": "Contact Name",
                      "type": "string"
                    },
                    {
                      "property": "ContactTitle",
                      "title": "Contact Title",
                      "type": "string"
                    },
                    {
                      "property": "Address",
                      "title": "Address",
                      "type": "string"
                    },
                    {
                      "property": "City",
                      "title": "City",
                      "type": "string"
                    },
                    {
                      "property": "Region",
                      "title": "Region",
                      "type": "string"
                    },
                    {
                      "property": "PostalCode",
                      "title": "Postal Code",
                      "type": "string"
                    },
                    {
                      "property": "Country",
                      "title": "Country",
                      "type": "string"
                    },
                    {
                      "property": "Phone",
                      "title": "Phone",
                      "type": "string"
                    },
                    {
                      "property": "Fax",
                      "title": "Fax",
                      "type": "string"
                    },
                    {
                      "filterable": false,
                      "sortable": false,
                      "template": [
                        {
                          "events": {
                            "click": [
                              {
                                "parameters": [
                                  {
                                    "name": "CustomerID",
                                    "value": "${data.CustomerID}"
                                  }
                                ],
                                "path": "orders-by-customer-id",
                                "type": "navigate"
                              }
                            ]
                          },
                          "icon": "",
                          "name": "button0",
                          "text": "Orders",
                          "type": "button"
                        }
                      ],
                      "width": "140px"
                    }
                  ],
                  "type": "grid",
                  "emptyText": "No records to display.",
                  "addText": "Add"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": [
      {
        "name": "Northwind.getCustomers",
        "parameters": [
          {
            "name": "$top",
            "value": "this.grid0.allowPaging ? this.grid0.pageSize : null"
          },
          {
            "name": "$skip",
            "value": "this.grid0.allowPaging ? 0 : null"
          },
          {
            "name": "$count",
            "value": "this.grid0.allowPaging"
          }
        ],
        "then": [
          {
            "name": "getCustomersResult",
            "type": "set",
            "value": "${result.value}"
          },
          {
            "name": "getCustomersCount",
            "type": "set",
            "value": "this.grid0.allowPaging ? result['@odata.count'] : ${result.value.length}"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "name": "Customers",
  "layout": "Main"
}
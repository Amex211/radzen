{
  "components": [
    {
      "type": "content",
      "container": "main",
      "components": [
        {
          "type": "heading",
          "name": "pageTitle",
          "size": "H1",
          "text": "Territories"
        },
        {
          "type": "row",
          "components": [
            {
              "type": "col",
              "class": "col-md-12",
              "components": [
                {
                  "name": "grid0",
                  "allowDelete": true,
                  "allowAdd": true,
                  "allowFiltering": true,
                  "allowMultiSorting": false,
                  "allowPaging": true,
                  "allowSorting": true,
                  "count": "${getTerritoriesCount}",
                  "data": "${getTerritoriesResult}",
                  "events": {
                    "loadData": [
                      {
                        "name": "Northwind.getTerritories",
                        "parameters": [
                          {
                            "name": "$top",
                            "value": "event.top"
                          },
                          {
                            "name": "$skip",
                            "value": "event.skip"
                          },
                          {
                            "name": "$expand",
                            "value": "Region"
                          },
                          {
                            "name": "$count",
                            "value": "event.top != null && event.skip != null"
                          },
                          {
                            "name": "$filter",
                            "value": "${event.filter}"
                          },
                          {
                            "name": "$orderby",
                            "value": "${event.orderby}"
                          },
                          {
                            "name": "$expand",
                            "value": "Region"
                          }
                        ],
                        "then": [
                          {
                            "name": "getTerritoriesResult",
                            "type": "set",
                            "value": "${result.value}"
                          },
                          {
                            "name": "getTerritoriesCount",
                            "type": "set",
                            "value": "event.top != null && event.skip != null ? result['@odata.count'] : ${result.value.length}"
                          }
                        ],
                        "type": "invoke"
                      }
                    ],
                    "delete": [
                      {
                        "error": [
                          {
                            "detail": "Unable to delete Territory",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "Northwind.deleteTerritory",
                        "parameters": [
                          {
                            "name": "TerritoryID",
                            "value": "${event.TerritoryID}"
                          }
                        ],
                        "then": [
                          {
                            "detail": "Territory deleted!",
                            "severity": "success",
                            "summary": "Success",
                            "type": "notify"
                          }
                        ],
                        "type": "invoke"
                      }
                    ],
                    "add": [
                      {
                        "path": "add-territory",
                        "type": "popup"
                      }
                    ],
                    "rowSelect": [
                      {
                        "parameters": [
                          {
                            "name": "TerritoryID",
                            "value": "${event.TerritoryID}"
                          }
                        ],
                        "path": "edit-territory",
                        "type": "popup"
                      }
                    ]
                  },
                  "title": "",
                  "columns": [
                    {
                      "property": "TerritoryID",
                      "title": "Territory ID",
                      "type": "string"
                    },
                    {
                      "property": "TerritoryDescription",
                      "title": "Territory Description",
                      "type": "string"
                    },
                    {
                      "filterProperty": "Region.RegionDescription",
                      "sortProperty": "Region.RegionDescription",
                      "template": [
                        {
                          "events": {
                            "click": [
                              {
                                "parameters": [
                                  {
                                    "name": "RegionID",
                                    "value": "${data.RegionID}"
                                  }
                                ],
                                "path": "regions-by-region-id",
                                "type": "navigate"
                              }
                            ]
                          },
                          "icon": "",
                          "name": "regionButton",
                          "style": {
                            "width": "140px"
                          },
                          "text": "${data.Region?.RegionDescription}",
                          "type": "button"
                        }
                      ],
                      "title": "Region",
                      "type": "string",
                      "width": "160px"
                    }
                  ],
                  "type": "grid",
                  "emptyText": "No records to display.",
                  "addText": "Add"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": [
      {
        "name": "Northwind.getTerritories",
        "parameters": [
          {
            "name": "$top",
            "value": "this.grid0.allowPaging ? this.grid0.pageSize : null"
          },
          {
            "name": "$skip",
            "value": "this.grid0.allowPaging ? 0 : null"
          },
          {
            "name": "$count",
            "value": "this.grid0.allowPaging"
          },
          {
            "name": "$expand",
            "value": "Region"
          }
        ],
        "then": [
          {
            "name": "getTerritoriesResult",
            "type": "set",
            "value": "${result.value}"
          },
          {
            "name": "getTerritoriesCount",
            "type": "set",
            "value": "this.grid0.allowPaging ? result['@odata.count'] : ${result.value.length}"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "name": "Territories",
  "layout": "Main"
}
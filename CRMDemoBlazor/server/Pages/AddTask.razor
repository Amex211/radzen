@page "/add-task"
@layout MainLayout
@inherits RadzenCrm.Pages.AddTaskComponent

@using Radzen
@using Radzen.Blazor
@using RadzenCrm.Models.Crm
@using Microsoft.AspNetCore.Identity
@using RadzenCrm.Models
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

@inject Microsoft.Extensions.Localization.IStringLocalizer<AddTask> L
<RadzenContent @ref="content0" Container="main">
  <ChildContent>
    <div class="row">
      <div class="col-md-12">
        <RadzenTemplateForm @ref="form0" Data="@(task)" TItem="RadzenCrm.Models.Crm.Task" Visible="@(task != null)" Submit="@Form0Submit">
          <ChildContent>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Component="Title" style="width: 100%" Text="@L["undefined.Text"]">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenTextBox @ref="title" MaxLength="256" style="width: 100%" Name="Title">
                </RadzenTextBox>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Component="OpportunityId" style="width: 100%" Text="@L["undefined.Text"]">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenDropDown @ref="opportunityId" Data="@(getOpportunitiesResult)" Placeholder="@L["OpportunityId.Placeholder"]" style="display: block; width: 100%" TextProperty="Name" ValueProperty="Id" Name="OpportunityId">
                </RadzenDropDown>
                <RadzenRequiredValidator @ref="opportunityIdRequiredValidator" Component="OpportunityId" style="position: absolute" Text="@L["OpportunityIdRequiredValidator.Text"]">
                </RadzenRequiredValidator>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Component="DueDate" style="width: 100%" Text="@L["undefined.Text"]">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenDatePicker @ref="dueDate" DateFormat="MM/dd/yyyy" style="display: block; width: 100%" Value="@($"{DateTime.Now}")" Name="DueDate">
                </RadzenDatePicker>
                <RadzenRequiredValidator @ref="dueDateRequiredValidator" Component="DueDate" style="position: absolute" Text="@L["DueDateRequiredValidator.Text"]">
                </RadzenRequiredValidator>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Component="TypeId" style="width: 100%" Text="@L["undefined.Text"]">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenDropDown @ref="typeId" Data="@(getTaskTypesResult)" Placeholder="@L["TypeId.Placeholder"]" style="display: block; width: 100%" TextProperty="Name" ValueProperty="Id" Name="TypeId">
                </RadzenDropDown>
                <RadzenRequiredValidator @ref="typeIdRequiredValidator" Component="TypeId" style="position: absolute" Text="@L["TypeIdRequiredValidator.Text"]">
                </RadzenRequiredValidator>
              </div>
            </div>
            <div style="margin-bottom: 1rem" class="row">
              <div class="col-md-3">
                <RadzenLabel Component="StatusId" style="width: 100%" Text="@L["undefined.Text"]">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenDropDown @ref="statusId" Data="@(getTaskStatusesResult)" Placeholder="@L["StatusId.Placeholder"]" style="width: 100%" TextProperty="Name" ValueProperty="Id" Name="StatusId">
                </RadzenDropDown>
              </div>
            </div>
            <div class="row">
              <div class="col offset-sm-3">
                <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="@L["undefined.Text"]">
                </RadzenButton>
                <RadzenButton ButtonStyle="ButtonStyle.Light" Text="@L["undefined.Text"]" Click="@UndefinedClick">
                </RadzenButton>
              </div>
            </div>
          </ChildContent>
        </RadzenTemplateForm>
      </div>
    </div>
  </ChildContent>
</RadzenContent>

{
  "components": [
    {
      "type": "content",
      "container": "main",
      "components": [
        {
          "components": [
            {
              "class": "col-md-9",
              "components": [
                {
                  "name": "closeLabel",
                  "style": {
                    "fontWeight": "bold"
                  },
                  "text": "Item no longer available.",
                  "type": "label",
                  "visible": "${!canEdit}"
                }
              ],
              "name": "col0",
              "type": "col"
            },
            {
              "class": "col-md-3",
              "components": [
                {
                  "buttonStyle": "secondary",
                  "events": {
                    "click": [
                      {
                        "type": "back"
                      }
                    ]
                  },
                  "icon": "",
                  "name": "closeButton",
                  "style": {
                    "marginBottom": "20px"
                  },
                  "text": "Close",
                  "type": "button",
                  "visible": "${!canEdit}"
                }
              ],
              "name": "col1",
              "type": "col"
            }
          ],
          "name": "row0",
          "style": {},
          "type": "row"
        },
        {
          "type": "row",
          "components": [
            {
              "type": "col",
              "class": "col-md-12",
              "components": [
                {
                  "data": "${order}",
                  "events": {
                    "cancel": [
                      {
                        "type": "back"
                      }
                    ],
                    "submit": [
                      {
                        "error": [
                          {
                            "name": "canEdit",
                            "type": "set",
                            "value": "!(result.status == 400)"
                          },
                          {
                            "detail": "Unable to update Order",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "Northwind.updateOrder",
                        "parameters": [
                          {
                            "name": "OrderID",
                            "value": "${parameters.OrderID}"
                          },
                          {
                            "name": "Order",
                            "value": "${event}"
                          }
                        ],
                        "then": [
                          {
                            "type": "back"
                          }
                        ],
                        "type": "invoke"
                      }
                    ]
                  },
                  "fields": [
                    {
                      "data": "${getCustomersResult}",
                      "property": "CustomerID",
                      "required": false,
                      "textProperty": "CompanyName",
                      "title": "Customer",
                      "type": "lookup",
                      "valueProperty": "CustomerID",
                      "placeholder": "Choose Customer"
                    },
                    {
                      "data": "${getEmployeesResult}",
                      "property": "EmployeeID",
                      "required": false,
                      "textProperty": "LastName",
                      "title": "Employee",
                      "type": "lookup",
                      "valueProperty": "EmployeeID",
                      "placeholder": "Choose Employee"
                    },
                    {
                      "property": "OrderDate",
                      "required": false,
                      "title": "Order Date",
                      "type": "date"
                    },
                    {
                      "property": "RequiredDate",
                      "required": false,
                      "title": "Required Date",
                      "type": "date"
                    },
                    {
                      "property": "ShippedDate",
                      "required": false,
                      "title": "Shipped Date",
                      "type": "date"
                    },
                    {
                      "data": "${getShippersResult}",
                      "property": "ShipVia",
                      "required": false,
                      "textProperty": "CompanyName",
                      "title": "Shipper",
                      "type": "lookup",
                      "valueProperty": "ShipperID",
                      "placeholder": "Choose Shipper"
                    },
                    {
                      "property": "Freight",
                      "required": false,
                      "title": "Freight",
                      "type": "number"
                    },
                    {
                      "property": "ShipName",
                      "required": false,
                      "title": "Ship Name",
                      "type": "string",
                      "maxLength": 40
                    },
                    {
                      "property": "ShipAddress",
                      "required": false,
                      "title": "Ship Address",
                      "type": "string",
                      "maxLength": 60
                    },
                    {
                      "property": "ShipCity",
                      "required": false,
                      "title": "Ship City",
                      "type": "string",
                      "maxLength": 15
                    },
                    {
                      "property": "ShipRegion",
                      "required": false,
                      "title": "Ship Region",
                      "type": "string",
                      "maxLength": 15
                    },
                    {
                      "property": "ShipPostalCode",
                      "required": false,
                      "title": "Ship Postal Code",
                      "type": "string",
                      "maxLength": 10
                    },
                    {
                      "property": "ShipCountry",
                      "required": false,
                      "title": "Ship Country",
                      "type": "string",
                      "maxLength": 15
                    }
                  ],
                  "name": "form0",
                  "type": "form",
                  "visible": "${canEdit}"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": [
      {
        "name": "canEdit",
        "type": "set",
        "value": "true"
      },
      {
        "name": "Northwind.getOrderByOrderID",
        "parameters": [
          {
            "name": "OrderID",
            "value": "${parameters.OrderID}"
          }
        ],
        "then": [
          {
            "name": "order",
            "type": "set",
            "value": "${result}"
          }
        ],
        "error": [
          {
            "name": "canEdit",
            "type": "set",
            "value": "!(result.status == 400)"
          }
        ],
        "type": "invoke"
      },
      {
        "name": "Northwind.getCustomers",
        "parameters": [],
        "then": [
          {
            "name": "getCustomersResult",
            "type": "set",
            "value": "${result.value}"
          }
        ],
        "type": "invoke"
      },
      {
        "name": "Northwind.getEmployees",
        "parameters": [],
        "then": [
          {
            "name": "getEmployeesResult",
            "type": "set",
            "value": "${result.value}"
          }
        ],
        "type": "invoke"
      },
      {
        "name": "Northwind.getShippers",
        "parameters": [],
        "then": [
          {
            "name": "getShippersResult",
            "type": "set",
            "value": "${result.value}"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "name": "Edit Order",
  "layout": "Main"
}
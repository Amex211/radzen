{
  "components": [
    {
      "type": "content",
      "container": "main",
      "components": [
        {
          "type": "heading",
          "name": "pageTitle",
          "size": "H1",
          "text": "Order Details"
        },
        {
          "type": "row",
          "components": [
            {
              "type": "col",
              "class": "col-md-12",
              "components": [
                {
                  "name": "grid0",
                  "allowDelete": true,
                  "confirmDelete": true,
                  "allowAdd": true,
                  "allowFiltering": true,
                  "allowMultiSorting": false,
                  "allowPaging": true,
                  "allowSorting": true,
                  "count": "${getOrderDetailsCount}",
                  "data": "${getOrderDetailsResult}",
                  "events": {
                    "loadData": [
                      {
                        "name": "Sample.getOrderDetails",
                        "parameters": [
                          {
                            "name": "$top",
                            "value": "event.top"
                          },
                          {
                            "name": "$skip",
                            "value": "event.skip"
                          },
                          {
                            "name": "$count",
                            "value": "event.top != null && event.skip != null"
                          },
                          {
                            "name": "$filter",
                            "value": "${event.filter}"
                          },
                          {
                            "name": "$orderby",
                            "value": "${event.orderby}"
                          },
                          {
                            "name": "$expand",
                            "value": "Order,Product"
                          }
                        ],
                        "then": [
                          {
                            "name": "getOrderDetailsResult",
                            "type": "set",
                            "value": "${result.value}"
                          },
                          {
                            "name": "getOrderDetailsCount",
                            "type": "set",
                            "value": "event.top != null && event.skip != null ? result['@odata.count'] : ${result.value.length}"
                          }
                        ],
                        "type": "invoke",
                        "error": [
                          {
                            "detail": "Unable to load OrderDetails",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ]
                      }
                    ],
                    "delete": [
                      {
                        "error": [
                          {
                            "detail": "Unable to delete OrderDetail",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "Sample.deleteOrderDetail",
                        "parameters": [
                          {
                            "name": "Id",
                            "value": "${event.Id}"
                          }
                        ],
                        "then": [
                          {
                            "detail": "OrderDetail deleted!",
                            "severity": "success",
                            "summary": "Success",
                            "type": "notify"
                          }
                        ],
                        "type": "invoke"
                      }
                    ],
                    "add": [
                      {
                        "path": "add-order-detail",
                        "type": "popup"
                      }
                    ],
                    "rowSelect": [
                      {
                        "parameters": [
                          {
                            "name": "Id",
                            "value": "${event.Id}"
                          }
                        ],
                        "path": "edit-order-detail",
                        "type": "popup"
                      }
                    ]
                  },
                  "title": "",
                  "columns": [
                    {
                      "property": "Id",
                      "title": "Id",
                      "type": "integer"
                    },
                    {
                      "property": "Quantity",
                      "title": "Quantity",
                      "type": "integer"
                    },
                    {
                      "property": "OrderId",
                      "sortProperty": "Order.UserName",
                      "filterProperty": "Order.UserName",
                      "template": "${data.Order?.UserName}",
                      "title": "Order",
                      "type": "string"
                    },
                    {
                      "property": "ProductId",
                      "sortProperty": "Product.ProductName",
                      "filterProperty": "Product.ProductName",
                      "template": "${data.Product?.ProductName}",
                      "title": "Product",
                      "type": "string"
                    }
                  ],
                  "type": "grid",
                  "confirmDeleteText": "Are you sure you want to delete this record?",
                  "confirmDeleteTitle": "Confirmation",
                  "confirmDeleteOkText": "Ok",
                  "confirmDeleteCancelText": "Cancel",
                  "emptyText": "No records to display.",
                  "addText": "Add",
                  "clearFilterText": "Clear",
                  "applyFilterText": "Apply",
                  "equalsText": "Equals",
                  "notEqualsText": "Not equals",
                  "lessThanText": "Less than",
                  "lessThanOrEqualsText": "Less than or equals",
                  "greaterThanText": "Greater than",
                  "greaterThanOrEqualsText": "Greater than or equals",
                  "endsWithText": "Ends with",
                  "containsText": "Contains",
                  "startsWithText": "Starts with"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": [
      {
        "type": "execute",
        "code": "this.grid0.load();"
      }
    ]
  },
  "name": "Order Details",
  "layout": "Main"
}
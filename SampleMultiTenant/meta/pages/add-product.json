{
  "components": [
    {
      "type": "content",
      "container": "main",
      "components": [
        {
          "type": "row",
          "components": [
            {
              "type": "col",
              "class": "col-md-12",
              "components": [
                {
                  "data": "",
                  "events": {
                    "cancel": [
                      {
                        "type": "back"
                      }
                    ],
                    "submit": [
                      {
                        "error": [
                          {
                            "detail": "Unable to create new Product!",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "Sample.createProduct",
                        "parameters": [
                          {
                            "name": "Product",
                            "value": "${event}"
                          }
                        ],
                        "then": [
                          {
                            "path": "products",
                            "type": "navigate"
                          }
                        ],
                        "type": "invoke"
                      }
                    ]
                  },
                  "fields": [
                    {
                      "property": "ProductName",
                      "required": true,
                      "title": "Product Name",
                      "type": "string",
                      "maxLength": 255,
                      "requiredText": "is required"
                    },
                    {
                      "property": "ProductPrice",
                      "required": true,
                      "title": "Product Price",
                      "type": "number",
                      "requiredText": "is required",
                      "minText": "cannot be less than",
                      "maxText": "cannot be more than"
                    },
                    {
                      "property": "ProductPicture",
                      "required": true,
                      "title": "Product Picture",
                      "type": "file",
                      "requiredText": "is required"
                    }
                  ],
                  "name": "form0",
                  "type": "form"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": []
  },
  "name": "Add Product",
  "layout": "Main",
  "access": [
    "Authenticated"
  ]
}
{
  "components": [
    {
      "type": "content",
      "container": "main",
      "components": [
        {
          "type": "heading",
          "name": "pageTitle",
          "size": "H1",
          "text": "Categories"
        },
        {
          "type": "row",
          "components": [
            {
              "type": "col",
              "class": "col-md-12",
              "components": [
                {
                  "name": "grid0",
                  "allowDelete": true,
                  "allowAdd": true,
                  "allowFiltering": true,
                  "allowMultiSorting": false,
                  "allowPaging": true,
                  "allowSorting": true,
                  "count": "${getCategoriesCount}",
                  "data": "${getCategoriesResult}",
                  "events": {
                    "loadData": [
                      {
                        "name": "Northwind.getCategories",
                        "parameters": [
                          {
                            "name": "$top",
                            "value": "event.top"
                          },
                          {
                            "name": "$skip",
                            "value": "event.skip"
                          },
                          {
                            "name": "$expand",
                            "value": ""
                          },
                          {
                            "name": "$count",
                            "value": "event.top != null && event.skip != null"
                          },
                          {
                            "name": "$filter",
                            "value": "${event.filter}"
                          },
                          {
                            "name": "$orderby",
                            "value": "${event.orderby}"
                          }
                        ],
                        "then": [
                          {
                            "name": "getCategoriesResult",
                            "type": "set",
                            "value": "${result.value}"
                          },
                          {
                            "name": "getCategoriesCount",
                            "type": "set",
                            "value": "event.top != null && event.skip != null ? result['@odata.count'] : ${result.value.length}"
                          }
                        ],
                        "type": "invoke"
                      }
                    ],
                    "delete": [
                      {
                        "error": [
                          {
                            "detail": "Unable to delete Category",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "Northwind.deleteCategory",
                        "parameters": [
                          {
                            "name": "CategoryID",
                            "value": "${event.CategoryID}"
                          }
                        ],
                        "then": [
                          {
                            "detail": "Category deleted!",
                            "severity": "success",
                            "summary": "Success",
                            "type": "notify"
                          }
                        ],
                        "type": "invoke"
                      }
                    ],
                    "add": [
                      {
                        "path": "add-category",
                        "type": "popup"
                      }
                    ],
                    "rowSelect": [
                      {
                        "parameters": [
                          {
                            "name": "CategoryID",
                            "value": "${event.CategoryID}"
                          }
                        ],
                        "path": "edit-category",
                        "type": "popup"
                      }
                    ]
                  },
                  "title": "",
                  "columns": [
                    {
                      "property": "CategoryID",
                      "title": "Category ID",
                      "type": "integer"
                    },
                    {
                      "property": "CategoryName",
                      "title": "Category Name",
                      "type": "string"
                    },
                    {
                      "property": "Description",
                      "title": "Description",
                      "type": "string"
                    },
                    {
                      "format": "binary",
                      "property": "Picture",
                      "title": "Picture",
                      "type": "string"
                    }
                  ],
                  "type": "grid",
                  "emptyText": "No records to display.",
                  "addText": "Add"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": [
      {
        "name": "Northwind.getCategories",
        "parameters": [
          {
            "name": "$top",
            "value": "this.grid0.allowPaging ? this.grid0.pageSize : null"
          },
          {
            "name": "$skip",
            "value": "this.grid0.allowPaging ? 0 : null"
          },
          {
            "name": "$count",
            "value": "this.grid0.allowPaging"
          }
        ],
        "then": [
          {
            "name": "getCategoriesResult",
            "type": "set",
            "value": "${result.value}"
          },
          {
            "name": "getCategoriesCount",
            "type": "set",
            "value": "this.grid0.allowPaging ? result['@odata.count'] : ${result.value.length}"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "name": "Categories",
  "layout": "Main",
  "access": [
    "Authenticated"
  ]
}
@page "/customer-customer-demos"
@layout MainLayout
@inherits NorthwindBlazor.Pages.CustomerCustomerDemosComponent

@using Radzen
@using Radzen.Blazor
@using NorthwindBlazor.Models.Northwind
<RadzenContent Container="main">
  <ChildContent>
    <RadzenHeading Size="H1" Text="Customer Customer Demos">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@Button0Click">
        </RadzenButton>
        <RadzenGrid @ref="grid0" AllowFiltering="true" AllowPaging="true" AllowSorting="true" Data="@getCustomerCustomerDemosResult" TItem="NorthwindBlazor.Models.Northwind.CustomerCustomerDemo" RowSelect="@Grid0RowSelect">
          <Columns>
            <RadzenGridColumn TItem="NorthwindBlazor.Models.Northwind.CustomerCustomerDemo" Property="CustomerID" SortProperty="Customer.CompanyName" FilterProperty="Customer.CompanyName" Title="Customer">
              <Template Context="data">
              @(data.Customer?.CompanyName)
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="NorthwindBlazor.Models.Northwind.CustomerCustomerDemo" Property="CustomerTypeID" SortProperty="CustomerDemographic.CustomerDesc" FilterProperty="CustomerDemographic.CustomerDesc" Title="Customer Demographic">
              <Template Context="data">
              @(data.CustomerDemographic?.CustomerDesc)
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="NorthwindBlazor.Models.Northwind.CustomerCustomerDemo" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
              <Template Context="northwindBlazorModelsNorthwindCustomerCustomerDemo">
                <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="close" Size="ButtonSize.Small" Click="@((args) =>GridDeleteButtonClick(args, northwindBlazorModelsNorthwindCustomerCustomerDemo))" @onclick:stopPropagation="true">
                </RadzenButton>
              </Template>
            </RadzenGridColumn>
          </Columns>
        </RadzenGrid>
      </div>
    </div>
  </ChildContent>
</RadzenContent>

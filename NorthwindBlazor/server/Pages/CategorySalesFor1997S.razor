@page "/category-sales-for-1997-s"
@layout MainLayout
@inherits NorthwindBlazor.Pages.CategorySalesFor1997SComponent

@using Radzen
@using Radzen.Blazor
@using NorthwindBlazor.Models.Northwind
<RadzenContent Container="main">
  <ChildContent>
    <RadzenHeading Size="H1" Text="Category Sales For 1997 S">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenGrid @ref="grid0" AllowFiltering="true" AllowPaging="true" AllowSorting="true" Data="@getCategorySalesFor1997sResult" TItem="NorthwindBlazor.Models.Northwind.CategorySalesFor1997">
          <Columns>
            <RadzenGridColumn TItem="NorthwindBlazor.Models.Northwind.CategorySalesFor1997" Property="CategoryName" Title="Category Name">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="NorthwindBlazor.Models.Northwind.CategorySalesFor1997" Property="CategorySales" Title="Category Sales">
            </RadzenGridColumn>
          </Columns>
        </RadzenGrid>
      </div>
    </div>
  </ChildContent>
</RadzenContent>

@page "/employee-territories"
@layout MainLayout
@inherits NorthwindBlazor.Pages.EmployeeTerritoriesComponent

@using Radzen
@using Radzen.Blazor
@using NorthwindBlazor.Models.Northwind
<RadzenContent Container="main">
  <ChildContent>
    <RadzenHeading Size="H1" Text="Employee Territories">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@Button0Click">
        </RadzenButton>
        <RadzenGrid @ref="grid0" AllowFiltering="true" AllowPaging="true" AllowSorting="true" Data="@getEmployeeTerritoriesResult" TItem="NorthwindBlazor.Models.Northwind.EmployeeTerritory" RowSelect="@Grid0RowSelect">
          <Columns>
            <RadzenGridColumn TItem="NorthwindBlazor.Models.Northwind.EmployeeTerritory" Property="EmployeeID" SortProperty="Employee.LastName" FilterProperty="Employee.LastName" Title="Employee">
              <Template Context="data">
              @(data.Employee?.LastName)
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="NorthwindBlazor.Models.Northwind.EmployeeTerritory" Property="TerritoryID" SortProperty="Territory.TerritoryDescription" FilterProperty="Territory.TerritoryDescription" Title="Territory">
              <Template Context="data">
              @(data.Territory?.TerritoryDescription)
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="NorthwindBlazor.Models.Northwind.EmployeeTerritory" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
              <Template Context="northwindBlazorModelsNorthwindEmployeeTerritory">
                <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="close" Size="ButtonSize.Small" Click="@((args) =>GridDeleteButtonClick(args, northwindBlazorModelsNorthwindEmployeeTerritory))" @onclick:stopPropagation="true">
                </RadzenButton>
              </Template>
            </RadzenGridColumn>
          </Columns>
        </RadzenGrid>
      </div>
    </div>
  </ChildContent>
</RadzenContent>

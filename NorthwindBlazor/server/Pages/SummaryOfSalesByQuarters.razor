@page "/summary-of-sales-by-quarters"
@layout MainLayout
@inherits NorthwindBlazor.Pages.SummaryOfSalesByQuartersComponent

@using Radzen
@using Radzen.Blazor
@using NorthwindBlazor.Models.Northwind
<RadzenContent @ref="content1" Container="main">
  <ChildContent>
    <RadzenHeading @ref="pageTitle" Size="H1" Text="Summary Of Sales By Quarters">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenGrid @ref="grid0" AllowFiltering="true" AllowPaging="true" AllowSorting="true" Data="@(getSummaryOfSalesByQuartersResult)" TItem="SummaryOfSalesByQuarter">
          <Columns>
            <RadzenGridColumn TItem="SummaryOfSalesByQuarter" Context="data" Format="date-time" Property="ShippedDate" FormatString="{0:d}" Title="Shipped Date" Type="string">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="SummaryOfSalesByQuarter" Context="data" Property="OrderID" Title="Order ID" Type="integer">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="SummaryOfSalesByQuarter" Context="data" Format="decimal" Property="Subtotal" Title="Subtotal" Type="number">
            </RadzenGridColumn>
          </Columns>
        </RadzenGrid>
      </div>
    </div>
  </ChildContent>
</RadzenContent>

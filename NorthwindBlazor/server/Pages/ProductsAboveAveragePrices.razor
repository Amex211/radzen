@page "/products-above-average-prices"
@layout MainLayout
@inherits NorthwindBlazor.Pages.ProductsAboveAveragePricesComponent

@using Radzen
@using Radzen.Blazor
@using NorthwindBlazor.Models.Northwind
<RadzenContent @ref="content1" Container="main">
  <ChildContent>
    <RadzenHeading @ref="pageTitle" Size="H1" Text="Products Above Average Prices">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenGrid @ref="grid0" AllowFiltering="true" AllowPaging="true" AllowSorting="true" Data="@(getProductsAboveAveragePricesResult)" TItem="ProductsAboveAveragePrice">
          <Columns>
            <RadzenGridColumn TItem="ProductsAboveAveragePrice" Context="data" Property="ProductName" Title="Product Name" Type="string">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="ProductsAboveAveragePrice" Context="data" Format="decimal" Property="UnitPrice" Title="Unit Price" Type="number">
            </RadzenGridColumn>
          </Columns>
        </RadzenGrid>
      </div>
    </div>
  </ChildContent>
</RadzenContent>

{
  "components": [
    {
      "type": "content",
      "container": "main",
      "components": [
        {
          "type": "heading",
          "name": "pageTitle",
          "size": "H1",
          "text": "Products"
        },
        {
          "type": "row",
          "components": [
            {
              "type": "col",
              "class": "col-md-12",
              "components": [
                {
                  "icon": "add_circle_outline",
                  "name": "button0",
                  "style": {
                    "marginBottom": "10px"
                  },
                  "text": "Add",
                  "type": "button",
                  "events": {
                    "click": [
                      {
                        "path": "add-product",
                        "type": "popup",
                        "then": [
                          {
                            "code": "await Invoke(() => { StateHasChanged(); });",
                            "type": "execute"
                          }
                        ]
                      }
                    ]
                  }
                },
                {
                  "name": "grid0",
                  "allowFiltering": true,
                  "allowPaging": true,
                  "allowSorting": true,
                  "data": "${getProductsResult}",
                  "events": {
                    "loadData": [],
                    "rowSelect": [
                      {
                        "parameters": [
                          {
                            "name": "ProductID",
                            "value": "${event.ProductID}"
                          }
                        ],
                        "path": "edit-product",
                        "type": "popup",
                        "argType": "Product",
                        "then": [
                          {
                            "code": "await Invoke(() => { StateHasChanged(); });",
                            "type": "execute"
                          }
                        ]
                      }
                    ]
                  },
                  "title": "",
                  "columns": [
                    {
                      "property": "ProductID",
                      "title": "Product ID",
                      "type": "integer"
                    },
                    {
                      "property": "ProductName",
                      "title": "Product Name",
                      "type": "string"
                    },
                    {
                      "property": "SupplierID",
                      "sortProperty": "Supplier.CompanyName",
                      "template": "${data.Supplier?.CompanyName}",
                      "title": "Supplier",
                      "type": "string"
                    },
                    {
                      "property": "CategoryID",
                      "sortProperty": "Category.CategoryName",
                      "template": "${data.Category?.CategoryName}",
                      "title": "Category",
                      "type": "string"
                    },
                    {
                      "property": "QuantityPerUnit",
                      "title": "Quantity Per Unit",
                      "type": "string"
                    },
                    {
                      "format": "decimal",
                      "property": "UnitPrice",
                      "title": "Unit Price",
                      "type": "number"
                    },
                    {
                      "format": "int16",
                      "property": "UnitsInStock",
                      "title": "Units In Stock",
                      "type": "integer"
                    },
                    {
                      "format": "int16",
                      "property": "UnitsOnOrder",
                      "title": "Units On Order",
                      "type": "integer"
                    },
                    {
                      "format": "int16",
                      "property": "ReorderLevel",
                      "title": "Reorder Level",
                      "type": "integer"
                    },
                    {
                      "property": "Discontinued",
                      "title": "Discontinued",
                      "type": "boolean"
                    },
                    {
                      "filterable": false,
                      "sortable": false,
                      "bubble": false,
                      "width": "70px",
                      "template": [
                        {
                          "buttonStyle": "danger",
                          "icon": "close",
                          "name": "gridDeleteButton",
                          "text": "",
                          "size": "sm",
                          "type": "button",
                          "events": {
                            "click": [
                              {
                                "error": [
                                  {
                                    "detail": "Unable to delete Product",
                                    "severity": "error",
                                    "summary": "Error",
                                    "type": "notify"
                                  }
                                ],
                                "name": "Northwind.deleteProduct",
                                "parameters": [
                                  {
                                    "name": "ProductID",
                                    "value": "${data.ProductID}"
                                  }
                                ],
                                "then": [
                                  {
                                    "code": "grid0.Reload();",
                                    "condition": "result != null",
                                    "type": "execute"
                                  }
                                ],
                                "type": "invoke",
                                "argType": "Product"
                              }
                            ]
                          }
                        }
                      ]
                    }
                  ],
                  "type": "grid",
                  "itemType": "Product"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": [
      {
        "name": "Northwind.getProducts",
        "parameters": [],
        "then": [
          {
            "name": "getProductsResult",
            "type": "set",
            "value": "${result.value}",
            "valueType": "IEnumerable<Product>"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "name": "Products",
  "layout": "Main"
}
{
  "components": [
    {
      "type": "content",
      "container": "main",
      "components": [
        {
          "type": "heading",
          "name": "pageTitle",
          "size": "H1",
          "text": "Orders"
        },
        {
          "type": "row",
          "components": [
            {
              "type": "col",
              "class": "col-md-12",
              "components": [
                {
                  "icon": "add_circle_outline",
                  "name": "button0",
                  "style": {
                    "marginBottom": "10px"
                  },
                  "text": "Add",
                  "type": "button",
                  "events": {
                    "click": [
                      {
                        "path": "add-order",
                        "type": "popup",
                        "then": [
                          {
                            "code": "await Invoke(() => { StateHasChanged(); });",
                            "type": "execute"
                          }
                        ]
                      }
                    ]
                  }
                },
                {
                  "name": "grid0",
                  "allowFiltering": true,
                  "allowPaging": true,
                  "allowSorting": true,
                  "data": "${getOrdersResult}",
                  "events": {
                    "loadData": [],
                    "rowSelect": [
                      {
                        "parameters": [
                          {
                            "name": "OrderID",
                            "value": "${event.OrderID}"
                          }
                        ],
                        "path": "edit-order",
                        "type": "popup",
                        "argType": "Order",
                        "then": [
                          {
                            "code": "await Invoke(() => { StateHasChanged(); });",
                            "type": "execute"
                          }
                        ]
                      }
                    ]
                  },
                  "title": "",
                  "columns": [
                    {
                      "property": "OrderID",
                      "title": "Order ID",
                      "type": "integer"
                    },
                    {
                      "property": "CustomerID",
                      "sortProperty": "Customer.CompanyName",
                      "template": "${data.Customer?.CompanyName}",
                      "title": "Customer",
                      "type": "string"
                    },
                    {
                      "property": "EmployeeID",
                      "sortProperty": "Employee.LastName",
                      "template": "${data.Employee?.LastName}",
                      "title": "Employee",
                      "type": "string"
                    },
                    {
                      "format": "date-time",
                      "property": "OrderDate",
                      "formatString": "{0:d}",
                      "title": "Order Date",
                      "type": "string"
                    },
                    {
                      "format": "date-time",
                      "property": "RequiredDate",
                      "formatString": "{0:d}",
                      "title": "Required Date",
                      "type": "string"
                    },
                    {
                      "format": "date-time",
                      "property": "ShippedDate",
                      "formatString": "{0:d}",
                      "title": "Shipped Date",
                      "type": "string"
                    },
                    {
                      "property": "ShipVia",
                      "sortProperty": "Shipper.CompanyName",
                      "template": "${data.Shipper?.CompanyName}",
                      "title": "Shipper",
                      "type": "string"
                    },
                    {
                      "format": "decimal",
                      "property": "Freight",
                      "title": "Freight",
                      "type": "number"
                    },
                    {
                      "property": "ShipName",
                      "title": "Ship Name",
                      "type": "string"
                    },
                    {
                      "property": "ShipAddress",
                      "title": "Ship Address",
                      "type": "string"
                    },
                    {
                      "property": "ShipCity",
                      "title": "Ship City",
                      "type": "string"
                    },
                    {
                      "property": "ShipRegion",
                      "title": "Ship Region",
                      "type": "string"
                    },
                    {
                      "property": "ShipPostalCode",
                      "title": "Ship Postal Code",
                      "type": "string"
                    },
                    {
                      "property": "ShipCountry",
                      "title": "Ship Country",
                      "type": "string"
                    },
                    {
                      "filterable": false,
                      "sortable": false,
                      "bubble": false,
                      "width": "70px",
                      "template": [
                        {
                          "buttonStyle": "danger",
                          "icon": "close",
                          "name": "gridDeleteButton",
                          "text": "",
                          "size": "sm",
                          "type": "button",
                          "events": {
                            "click": [
                              {
                                "error": [
                                  {
                                    "detail": "Unable to delete Order",
                                    "severity": "error",
                                    "summary": "Error",
                                    "type": "notify"
                                  }
                                ],
                                "name": "Northwind.deleteOrder",
                                "parameters": [
                                  {
                                    "name": "OrderID",
                                    "value": "${data.OrderID}"
                                  }
                                ],
                                "then": [
                                  {
                                    "code": "grid0.Reload();",
                                    "condition": "result != null",
                                    "type": "execute"
                                  }
                                ],
                                "type": "invoke",
                                "argType": "Order"
                              }
                            ]
                          }
                        }
                      ]
                    }
                  ],
                  "type": "grid",
                  "itemType": "Order"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": [
      {
        "name": "Northwind.getOrders",
        "parameters": [],
        "then": [
          {
            "name": "getOrdersResult",
            "type": "set",
            "value": "${result.value}",
            "valueType": "IEnumerable<Order>"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "name": "Orders",
  "layout": "Main"
}
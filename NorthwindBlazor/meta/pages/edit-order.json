  "events": {
    "load": [
      {
        "name": "canEdit",
        "type": "set",
        "value": "true",
        "valueType": "bool"
      },
      {
        "name": "Northwind.getOrderByOrderID",
        "parameters": [
          {
            "name": "OrderID",
            "value": "${parameters.OrderID}"
          }
        ],
        "then": [
          {
            "name": "order",
            "type": "set",
            "value": "${result}",
            "valueType": "Order"
          }
        ],
        "error": [
          {
            "name": "canEdit",
            "type": "set",
            "value": "!(result.status == 400)",
            "valueType": "bool"
          }
        ],
        "type": "invoke"
      },
      {
        "name": "Northwind.getCustomers",
        "parameters": [],
        "then": [
          {
            "name": "getCustomersResult",
            "type": "set",
            "value": "${result.value}",
            "valueType": "IEnumerable<Customer>"
          }
        ],
        "type": "invoke"
      },

@using Radzen
@using Radzen.Blazor
@using NorthwindBlazor.Models.Northwind
@page "/AddTerritory"
@inherits NorthwindBlazor.App.Pages.AddTerritoryModel
<RadzenContent ref="content1" Container="main">
  <ChildContent>
    <RadzenHeading ref="pageTitle" Size="H1" Text="Add Territory">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenTemplateForm ref="form0" Data="@territory" Visible="@{territory != null}" TItem="Territory" Submit="@Form0Submit">
          <ChildContent>
            <div style="margin-bottom: 1rem;" class="row">
              <div class="col-md-3">
                <RadzenLabel ref="label1" Text="Territory ID" Component="TerritoryID" style="width: 100%;">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenTextBox ref="territoryId" MaxLength="20" style="display: block; width: 100%;" Name="TerritoryID">
                </RadzenTextBox>
                <RadzenRequiredValidator ref="territoryIdRequiredValidator" Component="TerritoryID" Text="TerritoryID is required" style="position: absolute;">
                </RadzenRequiredValidator>
              </div>
            </div>
            <div style="margin-bottom: 1rem;" class="row">
              <div class="col-md-3">
                <RadzenLabel ref="label2" Text="Territory Description" Component="TerritoryDescription" style="width: 100%;">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenTextBox ref="territoryDescription" MaxLength="50" style="display: block; width: 100%;" Name="TerritoryDescription">
                </RadzenTextBox>
                <RadzenRequiredValidator ref="territoryDescriptionRequiredValidator" Component="TerritoryDescription" Text="TerritoryDescription is required" style="position: absolute;">
                </RadzenRequiredValidator>
              </div>
            </div>
            <div style="margin-bottom: 1rem;" class="row">
              <div class="col-md-3">
                <RadzenLabel ref="label3" Text="Region" Component="RegionID" style="width: 100%;">
                </RadzenLabel>
              </div>
              <div class="col-md-9">
                <RadzenDropDown ref="regionId" Data="@getRegionsResult" TextProperty="RegionDescription" ValueProperty="RegionID" Placeholder="Choose Region" style="display: block; width: 100%;" Name="RegionID">
                </RadzenDropDown>
                <RadzenRequiredValidator ref="regionIdRequiredValidator" Component="RegionID" Text="RegionID is required" style="position: absolute;">
                </RadzenRequiredValidator>
              </div>
            </div>
            <div class="row">
              <div class="col offset-sm-3">
                <RadzenButton ref="button1" ButtonType="submit" Icon="save" Text="Save" ButtonStyle="primary">
                </RadzenButton>
                <RadzenButton ref="button2" ButtonStyle="light" Text="Cancel" Click="@Button2Click">
                </RadzenButton>
              </div>
            </div>
          </ChildContent>
        </RadzenTemplateForm>
      </div>
    </div>
  </ChildContent>
</RadzenContent>

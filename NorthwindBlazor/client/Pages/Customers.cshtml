@using Radzen
@using Radzen.Blazor
@using NorthwindBlazor.Models.Northwind
@page "/Customers"
@inherits NorthwindBlazor.App.Pages.CustomersModel
<RadzenContent ref="content1" Container="main">
  <ChildContent>
    <RadzenHeading ref="pageTitle" Size="H1" Text="Customers">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenButton ref="button0" Icon="add_circle_outline" style="margin-bottom: 10px;" Text="Add" Click="@Button0Click">
        </RadzenButton>
        <RadzenGrid ref="grid0" AllowPaging="true" AllowSorting="true" Count="@getCustomersCount" Data="@getCustomersResult" TItem="Customer" LoadData="@Grid0LoadData" RowSelect="@Grid0RowSelect">
          <Columns>
            <RadzenGridColumn TItem="Customer" Context="data" Property="CustomerID" Title="Customer ID" Type="string">
              <Template>
              @data.CustomerID
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="Customer" Context="data" Property="CompanyName" Title="Company Name" Type="string">
              <Template>
              @data.CompanyName
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="Customer" Context="data" Property="ContactName" Title="Contact Name" Type="string">
              <Template>
              @data.ContactName
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="Customer" Context="data" Property="ContactTitle" Title="Contact Title" Type="string">
              <Template>
              @data.ContactTitle
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="Customer" Context="data" Property="Address" Title="Address" Type="string">
              <Template>
              @data.Address
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="Customer" Context="data" Property="City" Title="City" Type="string">
              <Template>
              @data.City
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="Customer" Context="data" Property="Region" Title="Region" Type="string">
              <Template>
              @data.Region
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="Customer" Context="data" Property="PostalCode" Title="Postal Code" Type="string">
              <Template>
              @data.PostalCode
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="Customer" Context="data" Property="Country" Title="Country" Type="string">
              <Template>
              @data.Country
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="Customer" Context="data" Property="Phone" Title="Phone" Type="string">
              <Template>
              @data.Phone
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="Customer" Context="data" Property="Fax" Title="Fax" Type="string">
              <Template>
              @data.Fax
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="Customer" Context="data" Filterable="false" Sortable="false" Bubble="false" Width="70px">
              <Template>
                <RadzenButton ref="gridDeleteButton" ButtonStyle="danger" Icon="close" Size="sm" Click="@((args) =>GridDeleteButtonClick(args, data))">
                </RadzenButton>
              </Template>
            </RadzenGridColumn>
          </Columns>
        </RadzenGrid>
      </div>
    </div>
  </ChildContent>
</RadzenContent>

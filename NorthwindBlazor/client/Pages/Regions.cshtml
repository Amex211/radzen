@using Radzen
@using Radzen.Blazor
@using NorthwindBlazor.Models.Northwind
@page "/Regions"
@inherits NorthwindBlazor.App.Pages.RegionsModel
<RadzenContent ref="content1" Container="main">
  <ChildContent>
    <RadzenHeading ref="pageTitle" Size="H1" Text="Regions">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenButton ref="button0" Icon="add_circle_outline" style="margin-bottom: 10px;" Text="Add" Click="@Button0Click">
        </RadzenButton>
        <RadzenGrid ref="grid0" AllowPaging="true" AllowSorting="true" Count="@getRegionsCount" Data="@getRegionsResult" TItem="Region" LoadData="@Grid0LoadData" RowSelect="@Grid0RowSelect">
          <Columns>
            <RadzenGridColumn TItem="Region" Context="data" Property="RegionID" Title="Region ID" Type="integer">
              <Template>
              @data.RegionID
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="Region" Context="data" Property="RegionDescription" Title="Region Description" Type="string">
              <Template>
              @data.RegionDescription
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="Region" Context="data" Filterable="false" Sortable="false" Bubble="false" Width="70px">
              <Template>
                <RadzenButton ref="gridDeleteButton" ButtonStyle="danger" Icon="close" Size="sm" Click="@((args) =>GridDeleteButtonClick(args, data))">
                </RadzenButton>
              </Template>
            </RadzenGridColumn>
          </Columns>
        </RadzenGrid>
      </div>
    </div>
  </ChildContent>
</RadzenContent>

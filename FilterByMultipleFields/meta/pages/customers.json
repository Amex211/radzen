{
  "access": [
    "Everybody"
  ],
  "components": [
    {
      "components": [
        {
          "name": "pageTitle",
          "size": "H1",
          "text": "Customers",
          "type": "heading"
        },
        {
          "components": [
            {
              "class": "col-md-10",
              "components": [
                {
                  "components": [
                    {
                      "class": "col-md-2",
                      "components": [
                        {
                          "component": "textbox0",
                          "name": "label0",
                          "style": {
                            "textAlign": "left"
                          },
                          "text": "City",
                          "type": "label"
                        }
                      ],
                      "name": "col0",
                      "type": "col"
                    },
                    {
                      "class": "col-md-10",
                      "components": [
                        {
                          "events": {
                            "change": [
                              {
                                "name": "City",
                                "type": "set",
                                "value": "${event}"
                              }
                            ]
                          },
                          "name": "textbox0",
                          "style": {
                            "width": "100%"
                          },
                          "type": "textbox",
                          "value": ""
                        }
                      ],
                      "name": "col1",
                      "type": "col"
                    }
                  ],
                  "name": "row0",
                  "type": "row"
                },
                {
                  "components": [
                    {
                      "class": "col-md-2",
                      "components": [
                        {
                          "component": "textbox1",
                          "name": "label1",
                          "text": "Country",
                          "type": "label"
                        }
                      ],
                      "name": "col2",
                      "type": "col"
                    },
                    {
                      "class": "col-md-10",
                      "components": [
                        {
                          "events": {
                            "change": [
                              {
                                "condition": "",
                                "name": "Country",
                                "type": "set",
                                "value": "${event}"
                              }
                            ]
                          },
                          "name": "textbox1",
                          "style": {
                            "width": "100%"
                          },
                          "type": "textbox",
                          "value": ""
                        }
                      ],
                      "name": "col3",
                      "type": "col"
                    }
                  ],
                  "name": "row1",
                  "style": {
                    "marginTop": "10px"
                  },
                  "type": "row"
                }
              ],
              "name": "col5",
              "type": "col"
            },
            {
              "class": "col-md-2",
              "components": [
                {
                  "data": "${operators}",
                  "events": {
                    "change": [
                      {
                        "code": "this.customersGrid.callLoadData();",
                        "type": "execute"
                      }
                    ]
                  },
                  "name": "dropdown0",
                  "style": {
                    "display": "block",
                    "width": "70px"
                  },
                  "textProperty": "name",
                  "type": "dropdown",
                  "value": "${operator}",
                  "valueProperty": "value"
                },
                {
                  "events": {
                    "click": [
                      {
                        "code": "this.customersGrid.callLoadData();",
                        "type": "execute"
                      }
                    ]
                  },
                  "icon": "",
                  "name": "button0",
                  "style": {
                    "marginTop": "10px"
                  },
                  "text": "Search",
                  "type": "button"
                }
              ],
              "name": "col6",
              "type": "col"
            }
          ],
          "name": "row3",
          "type": "row"
        },
        {
          "components": [
            {
              "class": "col-md-12",
              "components": [
                {
                  "components": [
                    {
                      "addText": "Add",
                      "allowFiltering": true,
                      "allowPaging": true,
                      "allowSorting": true,
                      "columns": [
                        {
                          "property": "CustomerID",
                          "title": "Customer ID",
                          "type": "string"
                        },
                        {
                          "property": "CompanyName",
                          "title": "Company Name",
                          "type": "string"
                        },
                        {
                          "property": "ContactName",
                          "title": "Contact Name",
                          "type": "string"
                        },
                        {
                          "property": "ContactTitle",
                          "title": "Contact Title",
                          "type": "string"
                        },
                        {
                          "property": "Address",
                          "title": "Address",
                          "type": "string"
                        },
                        {
                          "property": "City",
                          "title": "City",
                          "type": "string"
                        },
                        {
                          "property": "Region",
                          "title": "Region",
                          "type": "string"
                        },
                        {
                          "property": "PostalCode",
                          "title": "Postal Code",
                          "type": "string"
                        },
                        {
                          "property": "Country",
                          "title": "Country",
                          "type": "string"
                        },
                        {
                          "property": "Phone",
                          "title": "Phone",
                          "type": "string"
                        },
                        {
                          "property": "Fax",
                          "title": "Fax",
                          "type": "string"
                        }
                      ],
                      "count": "${getCustomersCount}",
                      "data": "${getCustomersResult}",
                      "emptyText": "No records to display.",
                      "events": {
                        "loadData": [
                          {
                            "name": "Northwind.getCustomers",
                            "parameters": [
                              {
                                "name": "$top",
                                "value": "event.top"
                              },
                              {
                                "name": "$skip",
                                "value": "event.skip"
                              },
                              {
                                "name": "$expand",
                                "value": ""
                              },
                              {
                                "name": "$count",
                                "value": "event.top != null && event.skip != null"
                              },
                              {
                                "name": "$filter",
                                "value": "${this.filter(event.filter)}"
                              },
                              {
                                "name": "$orderby",
                                "value": "${event.orderby}"
                              }
                            ],
                            "then": [
                              {
                                "name": "getCustomersResult",
                                "type": "set",
                                "value": "${result.value}"
                              },
                              {
                                "name": "getCustomersCount",
                                "type": "set",
                                "value": "event.top != null && event.skip != null ? result['@odata.count'] : ${result.value.length}"
                              }
                            ],
                            "type": "invoke"
                          }
                        ]
                      },
                      "name": "customersGrid",
                      "pageSize": 10,
                      "type": "grid"
                    }
                  ],
                  "name": "fieldset0",
                  "text": "Customers",
                  "type": "fieldset"
                }
              ],
              "name": "col4",
              "type": "col"
            }
          ],
          "name": "row2",
          "type": "row"
        }
      ],
      "container": "main",
      "type": "content"
    }
  ],
  "events": {
    "load": [
      {
        "name": "Northwind.getCustomers",
        "parameters": [
          {
            "name": "$top",
            "value": "this.customersGrid.allowPaging ? this.customersGrid.pageSize : null"
          },
          {
            "name": "$skip",
            "value": "this.customersGrid.allowPaging ? 0 : null"
          },
          {
            "name": "$count",
            "value": "this.customersGrid.allowPaging"
          }
        ],
        "then": [
          {
            "name": "getCustomersResult",
            "type": "set",
            "value": "${result.value}"
          },
          {
            "name": "getCustomersCount",
            "type": "set",
            "value": "this.customersGrid.allowPaging ? result['@odata.count'] : ${result.value.length}"
          }
        ],
        "type": "invoke"
      },
      {
        "condition": "",
        "name": "operators",
        "type": "set",
        "value": "[{name: 'and', value: 'and'}, {name: 'or', value: 'or'}]"
      },
      {
        "name": "operator",
        "type": "set",
        "value": "'and'"
      }
    ]
  },
  "layout": "Main",
  "name": "Customers"
}